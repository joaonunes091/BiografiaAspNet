@model BiografiaAspNet.Models.ExpProfissional

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Experiência Profissional</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ExpProfissionalID" />
            <div class="form-group">
                <label asp-for="DadosPessoaisID" class="control-label"></label>
                <select asp-for="DadosPessoaisID" class="form-control" asp-items="ViewBag.DadosPessoaisID"></select>
                <span asp-validation-for="DadosPessoaisID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Entidade" class="control-label"></label>
                <input asp-for="Entidade" class="form-control" />
                <span asp-validation-for="Entidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Periodo" class="control-label"></label>
                <input asp-for="Periodo" class="form-control" />
                <span asp-validation-for="Periodo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Funcoes" class="control-label"></label>
                <input asp-for="Funcoes" class="form-control" />
                <span asp-validation-for="Funcoes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-sign-out-alt"></i></a>
            </div>
        </form>
    </div>
</div>

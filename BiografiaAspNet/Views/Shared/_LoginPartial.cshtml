@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link active" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Bem-Vindo @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Sair</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link active" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
